{
  "camera_settings": {
    "resolution": [1280, 720],
    "fps": 15,
    "quality": 85,
    "camera_index": 0
  },
  "analysis_settings": {
    "analysis_interval": 2,
    "save_interval": 5,
    "quality_threshold": 70,
    "max_frames_to_save": 100
  },
  "system_settings": {
    "enable_gpu": false,
    "cpu_cores": 2,
    "memory_limit": "512MB",
    "temperature_threshold": 70
  },
  "performance_settings": {
    "reduce_resolution_on_low_performance": true,
    "skip_frames_on_high_load": true,
    "adaptive_quality": true,
    "max_cpu_usage": 80
  },
  "output_settings": {
    "save_frames": true,
    "save_analysis_logs": true,
    "log_format": "json",
    "output_directory": "./output",
    "quality_frames_directory": "./quality_frames",
    "max_disk_usage_mb": 1000
  },
  "drone_integration": {
    "enable_drone_control": false,
    "drone_control_file": "drone_commands.json",
    "command_interval": 5
  }
} 